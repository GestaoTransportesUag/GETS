<p id="notice"><%= notice %></p>

<h1>Motorista</h1>
  <ul>
    <%= form_tag usuarios_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscando", :value => "Buscar" %>
    <% end %>
  </ul>

  <% @motorista.each do |motorista| %>
    <ul>
      <li><%= link_to motorista.nome, motorista_path(motorista) %></li>
    </ul>
  <% end %>
<br>

<p>
  <%= link_to 'Novo Motorista', new_motoristum_path %><br />
  <%= link_to 'Voltar', welcome_index_path %><br />
</p>