<p id="notice"><%= notice %></p>

<h1>Motorista</h1>

<table>
  <thead>
    <tr>
      <th>Cpf</th>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Numerodehoras</th>
      <th>Bancodehoras</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motorista.each do |motoristum| %>
      <tr>
        <td><%= motoristum.cpf %></td>
        <td><%= motoristum.nome %></td>
        <td><%= motoristum.telefone %></td>
        <td><%= motoristum.numeroDeHoras %></td>
        <td><%= motoristum.bancoDeHoras %></td>
        <td><%= link_to 'Show', motoristum %></td>
        <td><%= link_to 'Edit', edit_motoristum_path(motoristum) %></td>
        <td><%= link_to 'Destroy', motoristum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

