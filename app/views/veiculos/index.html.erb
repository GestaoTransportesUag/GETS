
<p id="notice"><%= notice %></p>

<div class = "jumbotron text-center">
  <h1>Veículos <%= image_tag("car.png", :alt => "bus",  height: 55, width: 55) %></h1>
  <p>Página principal que lista por placa e gerencia as véiculos já cadastrados</p>
</div>

<div class="container">
  <div class="jumbotron">
<div class="form-inline">
  <ul>
    <%= form_tag veiculos_path, :method => 'get' do  %>
      <%= text_field_tag :search, params[:search], class: 'form-control'%>
      <%= submit_tag "Buscando", :value => "Buscar", class: 'btn btn-default'%>
    <% end %>
  </ul>
</div>



<div class='btn-group-vertical'>
  <% @veiculos.each do |veiculo| %>

    <ul>
      <%if veiculo.alocado == TRUE%>
        <%= image_tag("g.ico", :alt => "bus",  height: 13, width: 13) %></h1>
        <%else %><%= image_tag("r.ico", :alt => "bus",  height: 13, width: 13) %></h1>
      <% end %>
        <%= link_to veiculo.placa , veiculo_path(veiculo), class: "btn btn-default"%>
        <%= link_to "Remover", veiculo, data: {:confirm => "Deseja remover o veículo?"}, :method => :delete, class: "btn btn-default" %>

    </ul>
  <% end %>
<br>
  <ul>
  <%= link_to 'Novo veículo', new_veiculo_path, class: "btn btn-default btn-lg" %><br />
  </ul>
</div>
  </div>
</div>

