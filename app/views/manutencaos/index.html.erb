<%if current_user.capacidadeDeGerencia == TRUE %>

  <p id="notice"><%= notice %></p>
<div class = "jumbotron text-center">
  <h1>Manutenções <%= image_tag("tool.png", :alt => "bus",  height: 55, width: 55) %></h1>
  <p>Página principal que lista por placa e os veículos que precisam de alguma manutenção</p>
</div>

<div class="container">
  <div class="jumbotron">
    <div class="form-inline">
  <ul>
    <%= form_tag manutencaos_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscando", :value => "Buscar" %>
    <% end %>
  </ul>
    </div>

  <% @manutencaos.each do |manutencao| %>
    <ul>

        <%= link_to manutencao.descricao, manutencao_path(manutencao), class: "btn btn-default" %>
        <%= link_to "Desagendar "+manutencao.descricao, manutencao, data: {:confirm => "Deseja realmente desagendar esta manutenção?"}, :method => :delete, class: "btn btn-default" %>
    </ul>
  <% end %>
<br>
<%= link_to 'Agendar manutenção', new_manutencao_path, class:"btn btn-default" %>
    </div>
  </div>

<% end %>
