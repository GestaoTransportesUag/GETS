<div class="jumbotron text-center">
  <h1>Login  <%= image_tag("key.png", :alt => "bus",  height: 55, width: 55) %></h1>
  <p>Use seu email e senha para ter acesso ao sistema</p>
</div>

<div class="container">
  <div class="jumbotron">
<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
  </div>
</div>
