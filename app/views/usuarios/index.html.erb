<p id="notice"><%= notice %></p>
<div class = "jumbotron text-center">
  <h1>Usuários <%= image_tag("user.png", :alt => "bus",  height: 55, width: 55) %></h1>
  <p1>Página principal que lista por nome e gerencia os usuários já cadastrados</p1>
</div>
<div class="container">
  <div class="jumbotron">
  <ul>
    <%= form_tag usuarios_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscando", :value => "Buscar" %>
    <% end %>
  </ul>

  <% @usuarios.each do |usuario| %>
    <ul>
        <%if usuario.ativo == TRUE%>
          <%= image_tag("g.ico", :alt => "bus",  height: 13, width: 13) %></h1>
          <%else %><%= image_tag("r.ico", :alt => "bus",  height: 13, width: 13) %></h1>
        <% end %>
        <%= link_to usuario.nome, usuario_path(usuario), class: "btn btn-default" %>
        <%= link_to "Remover "+usuario.nome, usuario, data: {:confirm => "Deseja remover o usuário?"}, :method => :delete, class: "btn btn-default" %>
    </ul>
  <% end %>
<br>

<ul>
  <%= link_to 'Novo usuário', new_usuario_path, class: "btn btn-default btn-lg" %><br />
</ul>
  </div>
</div>