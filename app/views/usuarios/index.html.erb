<p id="notice"><%= notice %></p>
<div class = "title-container">
  <h1>Usuários</h1>
</div>
  <ul>
    <%= form_tag usuarios_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscando", :value => "Buscar" %>
    <% end %>
  </ul>

  <% @usuarios.each do |usuario| %>
    <ul>
      <li>
        <%= link_to usuario.nome, usuario_path(usuario), class: "btn btn-default" %>
        <%= link_to "Remover", usuario, data: {:confirm => "Deseja remover o usuário?"}, :method => :delete, class: "btn btn-default" %>
      </li>
    </ul>
  <% end %>
<br>

<p>
  <%= link_to 'Novo Usuario', new_usuario_path, class: "btn btn-default" %><br />
</p>